<div class="container mt-6">
  <div class="columns is-centered">
    <div class="column is-10">
        <p class="is-size-1 has-text-weight-bold has-text-centered">旅行をもっと楽しく</p>
        <br>
        <div class="columns is-centered">
          <% if user_signed_in? %>
            <div class="column is-3">
              <%= link_to "さぁ、世界旅行へ", tweets_path, class: "button is-fullwidth" %>
            </div>
          <% else %>
            <div class="column is-3">
              <%= link_to "ログイン", new_user_session_path, class: "button is-fullwidth" %>
              <br>
              <%= link_to "新規登録", new_user_registration_path, class: "button is-fullwidth" %>
            </div>
          <% end %>
        </div>
    </div>
  </div>
</div>