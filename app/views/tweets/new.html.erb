<div class="container mt-6">
  <div class="columns is-centered">
    <div class="column is-4">
      <%= form_with model: @tweet, local: true do |f| %>
        <div class="field">
          <%= f.label :image %>
          <%= f.file_field :image, class: "input" %>
        </div>
        <div class="field">
          <%= f.label :title %>
          <p class="control">
            <%= f.text_field :title, autofocus: true, :placeholder => "title", class: "input" %>
          </p>
        </div>
        <div class="field">
          <%= f.label :text %>
          <p class="control">
            <%= f.text_area :text, :placeholder => "text", class: "textarea" %>
          </p>
        </div>
        <div class="actions">
          <%= f.submit "Tweet", class: "button is-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>