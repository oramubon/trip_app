<%= form_with model: @tweet, local: true do |f| %>
  <div class="field">
    <%= f.label :image %><br />
    <%= f.file_field :image %>
  </div>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_area :title %>
  </div>

  <div class="field">
    <%= f.label :text %><br />
    <%= f.text_area :text %>
  </div>

  <div class="actions">
    <%= f.submit "Tweet" %>
  </div>
<% end %>