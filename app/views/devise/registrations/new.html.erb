<div class="container mt-6">
  <div class="columns is-centered">
    <div class="column is-4">
      <%= form_for(@user, url: user_registration_path) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field">
          <%= f.label :nickname %>
          <p class="control has-icons-left">
            <%= f.text_field :nickname, autofocus: true, :placeholder => "nickname", class: "input" %>
            <span class="icon is-small is-left">
              <i class="fas fa-user"></i>
            </span>
          </p>
        </div>
        <div class="field">
          <%= f.label :email %>
          <p class="control has-icons-left">
            <%= f.email_field :email, autocomplete: "email", :placeholder => "email", class: "input" %>
            <span class="icon is-small is-left">
              <i class="fas fa-envelope"></i>
            </span>
          </p>
        </div>
        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <p class="control has-icons-left">
          <%= f.password_field :password, autocomplete: "new-password", :placeholder => "password", class: "input" %>
            <span class="icon is-small is-left">
              <i class="fas fa-lock"></i>
            </span>
          </p>
        </div>
        <div class="field">
          <%= f.label :password_confirmation %>
          <p class="control has-icons-left">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", :placeholder => "password confirmation", class: "input" %>
            <span class="icon is-small is-left">
              <i class="fas fa-lock"></i>
            </span>
          </p>
        </div>
        <div class="field">
          <%= f.label :first_name %>
          <p class="control has-icons-left">
            <%= f.text_field :first_name, :placeholder => "first-name", class: "input" %>
            <span class="icon is-small is-left">
              <i class="fas fa-user"></i>
            </span>
          </p>
        </div>
        <div class="field">
          <%= f.label :last_name %>
          <p class="control has-icons-left">
            <%= f.text_field :last_name, :placeholder => "last-name", class: "input" %>
            <span class="icon is-small is-left">
              <i class="fas fa-user"></i>
            </span>
          </p>
        </div>

        <div class="field">
          <%= f.label :birthday %><br />
            <%= raw sprintf(
                        f.date_select(
                          :birthday,
                          class: "select-birth",
                          use_month_numbers: true,
                          prompt:"--",
                          start_year: 1930,
                          end_year: (Time.now.year - 5),
                          date_separator: "%s"),
                          "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
        </div>

        <div class="field">
          <%= f.label :gender_id %>
          <p class="control has-icons-left">
            <%= f.collection_select(:gender_id, Gender.all, :id, :name, {}, {class: "input"}) %>
            <span class="icon is-small is-left">
              <i class="fas fa-user"></i>
            </span>
          </p>
        </div>
        <div class="actions">
          <%= f.submit "Next", class: "button is-success" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>