<h2>エリア情報登録</h2>

<%= form_for @area do |f| %>
  <%= render "devise/shared/error_messages", resource: @area %>

  <div class="field">
    <%= f.label :country %><br />
    <%= f.collection_select(:country_id, Country.all, :id, :name, {}, {}) %>
  </div>

  <div class="field">
    <%= f.label :state %><br />
    <%= f.text_field :state %>
  </div>

  <div class="field">
    <%= f.label :language %><br />
    <%= f.collection_select(:language_id, Language.all, :id, :name, {}, {}) %>
  </div>

  <div class="actions">
    <%= f.submit "Next" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>