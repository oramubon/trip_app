<div class="container mt-6">
  <div class="columns is-centered">
    <div class="column is-4 mb-6">
      <%= form_with model: @tour, local: true do |f| %>
        <div class="field">
          <%= f.label :image %>
          <%= f.file_field :image, class: "input" %>
        </div>
        <div class="field">
          <%= f.label :title %>
          <p class="control">
            <%= f.text_field :title, autofocus: true, :placeholder => "title", class: "input" %>
          </p>
        </div>

        <div class="field">
          <%= f.label :start_on %>
          <p class="control">
            <%= f.date_field :start_on, class: "input" %>
          </p>
        </div>

        <div class="field">
          <%= f.label :end_on %>
          <p class="control">
            <%= f.date_field :end_on, class: "input" %>
          </p>
        </div>

        <div class="field">
          <%= f.label :country_id %>
          <p class="control">
            <%= f.collection_select(:country_id, Country.all, :id, :name, {}, {class: "input"}) %>
          </p>
        </div>
        <div class="field">
          <%= f.label :description %>
          <p class="control">
            <%= f.text_area :description, :placeholder => "description", class: "textarea" %>
          </p>
        </div>
        <div class="field">
          <%= f.label :price %>
          <p class="control">
            <%= f.text_field :price, :placeholder => "price", class: "input" %>
          </p>
        </div>
        <div class="actions">
          <%= f.submit "Tweet", class: "button is-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>