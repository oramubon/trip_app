<div class="container mt-6">
  <div class="columns is-centered">
    <div class="column is-6 mb-6">
      <%= form_with model: tour, local: true do |f| %>
        <div class="field new-image">
          <%= f.label :image, "イメージ画像" %>
          <%= f.file_field :image, class: "input" %>
        </div>
        <div class="field new-title">
          <%= f.label :title, "タイトル" %>
          <%= f.text_field :title, autofocus: true, :placeholder => "例）台湾旅行", class: "input" %>
        </div>
        <div  class="field new-tour-date">
          <div>
            <%= f.label :start_on, "開始日" %>
            <%= f.date_field :start_on, class: "input" %>
          </div>
          <div class="ml-6">
            <%= f.label :end_on, "終了日" %>
            <%= f.date_field :end_on, class: "input" %>
          </div>
        </div>
        <div class="field new-tour-country-price">
          <%= f.label :country_id, "旅先" %>
          <%= f.collection_select(:country_id, Country.all, :id, :name, {}, {class: "input"}) %>
        </div>
        <div class="field">
          <%= f.label :description, "内容" %>
          <%= f.text_area :description, :placeholder => "最高の旅を！ １日目〜〜〜〜〜…", class: "textarea" %>
        </div>
        <div class="field new-tour-country-price">
          <%= f.label :price, "料金" %>
          <%= f.text_field :price, :placeholder => "例）30000", class: "input" %>
        </div>
        <div class="actions mt-5">
          <%= f.submit "投稿", class: "button is-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>